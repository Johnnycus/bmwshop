<div class="jumbotron showcar">
  <div class="container">
    <div class="row">
    <h2><strong><%= @product.name %></strong></h2>
      <div class="col-sm-10">
        <%= image_tag @product.photo.url, class: 'img-responsive' %>
        <p><%= @product.description %></p>
      </div>
      <div class="col-md-2 text-center">
        <h2><span class="label label-default">Price</span></h2>
        <h2><strong>$<%= @product.price %></strong></h2>
        <%= link_to root_path, class: 'btn btn-primary btn-lg' do %>
          Add to Cart
        <% end %>
      </div>
    </div>
  </div>
</div>
