<% title "Sign Up" %><br><br><br><br><br><br><br><br><br><br>
<div class="container text-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 well">
      <h1>Register</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "span4 form-control" %><br>

        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "span4 form-control" %><br>

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "span4 form-control" %><br>

        <div><%= f.submit "Sign up", class: "btn btn-default text-center" %></div>

      <% end %>
    </div>
  </div>
</div>

