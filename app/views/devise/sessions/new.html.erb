<% title "Log In" %><br><br><br><br><br><br><br><br><br><br>
<div class="container text-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 well">
      <h1>Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "span4 form-control" %><br>

        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "span4 form-control" %><br>

        <div class="text-left">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end %>
        </div>

        <%= f.submit "Log in", class: "btn btn-default" %><br>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>
